%h2 Detalle de Tipo de mezcal

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Tipo de mezcal
  .panel-body
    .row
      .col-md-4
        %b Nombre
      .col-md-8
        = @tipo_mezcal.nombre

.pull-right
  = link_to edit_tipo_mezcal_path(@tipo_mezcal), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to tipo_mezcales_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
