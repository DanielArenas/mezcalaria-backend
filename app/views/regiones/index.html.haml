%h2 Regiones

%hr

%table.table
  %thead
    %tr
      %th Nombre
      %th Estado
      %th Acciones
  %tbody
    - @regiones.each do |region|
      %tr
        %td= region.nombre
        %td= region.estado
        %td
          .btn-group
            = link_to 'Mostrar', region, class: 'btn btn-sm btn-default'
            = link_to 'Editar', edit_region_path(region), class: 'btn btn-sm btn-primary'
            = link_to 'Eliminar', region, method: :delete, data: { confirm: '¿Estás seguro?'}, class: 'btn btn-sm btn-danger'

%br

.pull-right
  = link_to new_region_path, class: 'btn btn-primary btn-lg' do
    = icon 'plus', "Nueva Región"
