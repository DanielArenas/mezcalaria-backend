%h2 Detalle de Región

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Región
  .panel-body
    .row
      .col-md-4
        %b Nombre
      .col-md-8
        = @region.nombre
    %hr
    .row
      .col-md-4
        %b Estado
      .col-md-8
        = @region.estado

.pull-right
  = link_to edit_region_path(@region), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to regiones_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
