%p#notice= notice

%h2 Detalle de Event

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Event
  .panel-body
    .row
      .col-md-4
        %b Name
      .col-md-8
        = @event.name
    %hr
    .row
      .col-md-4
        %b Place
      .col-md-8
        = @event.place
    %hr
    .row
      .col-md-4
        %b Date event
      .col-md-8
        = @event.date_event
    %hr
    .row
      .col-md-4
        %b Baner
      .col-md-8
        = @event.baner
    %hr
    .row
      .col-md-4
        %b Is free
      .col-md-8
        = @event.is_free

.pull-right
  = link_to edit_event_path(@event), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to events_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
