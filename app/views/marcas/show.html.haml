%h2 Detalle de Marca

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Marca
  .panel-body
    .row
      .col-md-4
        %b Nombre
      .col-md-8
        = @marca.nombre
    %hr
    .row
      .col-md-4
        %b Logotipo
      .col-md-8
        = @marca.logotipo
    %hr
    .row
      .col-md-4
        %b Direccion
      .col-md-8
        = @marca.direccion
    %hr
    .row
      .col-md-4
        %b Correo
      .col-md-8
        = @marca.correo

.pull-right
  = link_to edit_marca_path(@marca), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to marcas_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
