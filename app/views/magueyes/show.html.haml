%p#notice= notice

%h2 Detalle de Maguey

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Maguey
  .panel-body
    .row
      .col-md-4
        %b Title
      .col-md-8
        = @maguey.title
    %hr
    .row
      .col-md-4
        %b Sub title
      .col-md-8
        = @maguey.sub_title
    %hr
    .row
      .col-md-4
        %b Text
      .col-md-8
        = @maguey.description
    %hr
    .row
      .col-md-4
        %b Image
      .col-md-8
        = @maguey.image
    %hr
    .row
      .col-md-4
        %b Language
      .col-md-8
        = @maguey.language

.pull-right
  = link_to edit_maguey_path(@maguey), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to magueyes_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
