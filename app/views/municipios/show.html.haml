%h2 Detalle de Municipio

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Municipio
  .panel-body
    .row
      .col-md-4
        %b Nombre
      .col-md-8
        = @municipio.nombre
    %hr
    .row
      .col-md-4
        %b Estado
      .col-md-8
        = @municipio.estado
    %hr
    .row
      .col-md-4
        %b Region
      .col-md-8
        = @municipio.region

.pull-right
  = link_to edit_municipio_path(@municipio), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to municipios_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
