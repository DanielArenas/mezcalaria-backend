%h2 Detalle de Tipo de destilado

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Tipo de destilado
  .panel-body
    .row
      .col-md-4
        %b Nombre
      .col-md-8
        = @tipo_destilado.nombre

.pull-right
  = link_to edit_tipo_destilado_path(@tipo_destilado), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to tipo_destilados_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
