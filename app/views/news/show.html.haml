%p#notice= notice

%h2 Detalle de la Noticia

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title Noticia
  .panel-body
    .row
      .col-md-4
        %b Tittle
      .col-md-8
        = @news.tittle
    %hr
    .row
      .col-md-4
        %b Description
      .col-md-8
        = @news.description
    %hr
    .row
      .col-md-4
        %b Video
      .col-md-8
        = @news.video

.pull-right
  = link_to edit_news_path(@news), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to news_index_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
