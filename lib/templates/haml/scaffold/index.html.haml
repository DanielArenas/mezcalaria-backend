%p#notice= notice

%h2 <%= plural_table_name.humanize %>

%hr

%table.table
  %thead
    %tr
    <%- attributes.each do |attribute| -%>
      %th <%= attribute.name.humanize %>
    <%- end -%>
      %th Acciones
  %tbody
    - @<%= plural_table_name -%>.each do |<%= singular_table_name -%>|
      %tr
      <%- attributes.each do |attribute| -%>
        %td= <%= singular_table_name %>.<%= attribute.name %>
      <%- end -%>
        %td
          .btn-group
            = link_to 'Mostrar', <%= singular_table_name %>, class: 'btn btn-sm btn-default'
            = link_to 'Editar', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-sm btn-primary'
            = link_to 'Eliminar', <%= singular_table_name %>, method: :delete, data: { confirm: '¿Estás seguro?'}, class: 'btn btn-sm btn-danger'

%br

.pull-right
  = link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary btn-lg' do
    = icon 'plus', "<%= "Nuevo #{ singular_table_name.humanize }" %>"
