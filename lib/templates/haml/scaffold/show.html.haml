%p#notice= notice

%h2 Detalle de <%= singular_table_name.humanize %>

%hr

.panel.panel-default
  .panel-heading
    %h3.panel-title <%= singular_table_name.humanize %>
  .panel-body
  <%- attributes.each do |attribute| -%>
    .row
      .col-md-4
        %b <%= attribute.name.humanize %>
      .col-md-8
        = @<%= singular_table_name %>.<%= attribute.name %>
    <%- unless attribute == attributes.last -%>
    %hr
    <%- end -%>
  <%- end -%>

.pull-right
  = link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' do
    = icon 'pencil', 'Editar'

  = link_to <%= plural_table_name %>_path, class: 'btn btn-default' do
    = icon 'arrow-left', 'Regresar a listado'
